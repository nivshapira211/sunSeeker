# JWT Secrets - Replace with your own secure random strings
# Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here

# JWT Expiration Times (optional - defaults are used if not set)
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# MongoDB Connection
MONGODB_URI=mongodb://127.0.0.1:27017/posts-app

# Server Port
PORT=3000
